<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.bme.tmit.moneyexchange.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btnPurchases"
            android:layout_width="161dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Purchases"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="195dp" />

        <Button
            android:id="@+id/btnSummary"
            android:layout_width="142dp"
            android:layout_height="52dp"
            android:layout_below="@+id/btnPurchases"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            android:text="Summary"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="288dp" />

        <Button
            android:id="@+id/btnMoneyExchange"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnPurchases"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp"
            android:text="Money Exchange"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="101dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
