<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.bme.tmit.moneyexchange.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#297c9e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:src="@drawable/myhuf_logo" />

        <Button
            android:id="@+id/btnPurchases"
            android:layout_width="match_parent"
            android:layout_height="200px"

            android:layout_above="@+id/btnSummary"
            android:layout_marginBottom="21dp"
            android:background="#01579b"
            android:text="Purchases"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnSummary"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_alignParentBottom="true"

            android:layout_marginBottom="25dp"
            android:background="#01579b"
            android:text="Summary"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnMoneyExchange"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_above="@+id/btnPurchases"
            android:layout_marginBottom="21dp"
            android:background="#01579b"
            android:text="Money Exchange"
            android:textSize="24sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
