<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.bme.tmit.moneyexchange.PurchaseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#297c9e">

        <Button
            android:id="@+id/btnAddPurchase"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:background="@color/colorPrimary"
            android:text="safe purchase to summary" />

        <TextView
            android:id="@+id/textViewPurchaseHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:inputType="none"
            android:text="Add a purchase"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editPurchaseHUF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPurchaseExplain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="true" />

        <TextView
            android:id="@+id/textViewPurchaseExplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPurchaseHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:inputType="none"
            android:text="Please enter the HUF amount of your purchase:"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editPurchaseHUF"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:inputType="none"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textAmountEUR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textRate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:textAlignment="center"
            android:textSize="30dp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
