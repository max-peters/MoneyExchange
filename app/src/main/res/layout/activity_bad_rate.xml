<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.bme.tmit.moneyexchange.BadRateActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="768px"
        android:layout_height="1280px"
        android:background="#fb5763">


        <Button
            android:id="@+id/btnSafeRate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textBadExplain"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="82dp"
            android:background="@color/colorAccent"
            android:padding="50px"
            android:text="safe rate anyway" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:src="@drawable/fail"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="63dp" />

        <TextView
            android:id="@+id/textBadRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="BAD RATE"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textBadExplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="30px"
            android:text="Unfortunately they offered you an unacceptable exchange rate. You should look for other options."
            android:textAlignment="center"
            android:textSize="18sp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
