<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hu.bme.tmit.moneyexchange.TypeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#297c9e">

        <Button
            android:id="@+id/btnTypeOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@color/colorPrimary"
            android:focusable="false"
            android:text="safe"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="271dp" />

        <Button
            android:id="@+id/btnTypeTransport"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnTypeAccommodation"
            android:layout_marginTop="13dp"
            android:background="@color/colorPrimary"
            android:focusable="false"
            android:text="transport"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="271dp" />

        <Button
            android:id="@+id/btnTypeRestaurant"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_above="@+id/btnTypeSightseeing"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp"
            android:background="@color/colorPrimary"
            android:focusable="false"
            android:text="food or drinks"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="271dp" />

        <Button
            android:id="@+id/btnTypeAccommodation"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btnTypeSightseeing"
            android:layout_marginTop="11dp"
            android:background="@color/colorPrimary"
            android:focusable="false"
            android:text="accommodation"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="271dp" />

        <Button
            android:id="@+id/btnTypeSightseeing"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:focusable="false"
            android:text="sightseeing"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="271dp" />

        <TextView
            android:id="@+id/textViewTypeExplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPurchaseHeader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="62dp"
            android:focusable="false"
            android:inputType="none"
            android:text="Tell us what you paid for:"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editTextOwnType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btnTypeOther"
            android:layout_toStartOf="@+id/btnTypeOther"
            android:hint="create own type"
            android:ems="10"
            android:inputType="textPersonName" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
